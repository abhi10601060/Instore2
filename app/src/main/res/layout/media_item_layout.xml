<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent"
    android:layout_margin="10dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/white"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="160dp"
        android:layout_height="200dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@mipmap/ic_launcher"
            android:layout_margin="7dp"
            android:id="@+id/mediaItem_user_profile_image"/>

        <TextView
            android:id="@+id/media_item_user_name"
            android:layout_width="90dp"
            android:layout_height="18dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/mediaItem_user_profile_image"
            android:text="account name"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:singleLine="true"
            android:textStyle="bold"
            android:ellipsize="end"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_file_download_24"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:id="@+id/media_item_download_btn"/>


        <ImageView
            android:layout_width="140dp"
            android:layout_height="150dp"
            android:id="@+id/media_item_image"
            android:layout_below="@id/mediaItem_user_profile_image"
            android:layout_centerHorizontal="true"
            android:src="@color/white"/>


    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>