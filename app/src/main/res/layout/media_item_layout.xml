<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent"
    android:layout_margin="12dp"
    app:strokeWidth="1.5dp"
    app:strokeColor="@color/searchbar_text"
    app:cardCornerRadius="10dp"
    android:elevation="8dp">

    <RelativeLayout
        android:layout_width="160dp"
        android:layout_height="200dp"
        android:background="@color/card_background">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/mediaItem_user_profile_image"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginStart="7dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="7dp"
            android:layout_marginBottom="7dp"
            android:src="@mipmap/ic_launcher"
            app:civ_border_color="@color/indigo"
            app:civ_border_width="1dp" />

        <TextView
            android:id="@+id/media_item_user_name"
            android:layout_width="90dp"
            android:layout_height="18dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@+id/mediaItem_user_profile_image"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="account name"
            android:textColor="@color/white"
            android:textSize="12dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/media_item_download_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_baseline_file_download_24" />


        <ImageView
            android:id="@+id/media_item_image"
            android:layout_width="140dp"
            android:layout_height="150dp"
            android:layout_below="@id/mediaItem_user_profile_image"
            android:layout_centerHorizontal="true"
            android:src="@color/white" />


    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>