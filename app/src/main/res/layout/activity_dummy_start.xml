<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.DummyStartActivity"
    android:background="@color/background">

    <RelativeLayout
        android:id="@+id/Logo_RL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/logo_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:backgroundTint="@color/indigo"
            android:elevation="16dp"
            app:cardCornerRadius="15dp">

            <ImageView
                android:id="@+id/start_activity_logo"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@mipmap/instore_logo" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/logo_card"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:elevation="8dp"
            android:fontFamily="@font/arima_madurai_bold"
            android:text="InStash"
            android:textColor="@color/white"
            android:textSize="35dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_video_and_story"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/app_name"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/arima_madurai"
            android:text="Video and Story"
            android:textColor="@color/white"
            android:textSize="22dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_video_and_story"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/arima_madurai"
            android:text="downloader for Instagram"
            android:textColor="@color/white"
            android:textSize="22dp" />

    </RelativeLayout>

    <Button
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="150dp"
        android:elevation="16dp"
        android:text="Login via Instagram"
        android:textColor="@color/white"
        android:visibility="gone" />

    <com.github.ybq.android.spinkit.SpinKitView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        app:SpinKit_Style="MultiplePulse"
        app:SpinKit_Color="@color/indigo"
        android:id="@+id/login_progress_bar"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="110dp"
        android:id="@+id/or_RL"
        android:visibility="gone">

        <View
            android:id="@+id/first_or_line"
            android:layout_width="100dp"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:background="@color/white" />

        <TextView
            android:id="@+id/txt_or"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/first_or_line"
            android:text="or"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <View
            android:layout_width="100dp"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/txt_or"
            android:background="@color/white" />

    </RelativeLayout>



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/without_login_RL"
        android:visibility="gone">

        <TextView
            android:id="@+id/txt_of_without_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="To access public and downloaded posts"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/txt_without_login_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_of_without_login"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="Enter without login"
            android:textColor="@color/indigo"
            android:textSize="18dp" />

    </RelativeLayout>


</RelativeLayout>